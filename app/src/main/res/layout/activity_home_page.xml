<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">
    
    <LinearLayout

        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="110dp"
        android:background="#21896C"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.265">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="-35dp"
            android:layout_marginRight="290dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/about" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="255dp"
            android:layout_height="70dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="-90dp"
            android:layout_marginRight="150dp"
            android:layout_weight="1"
            android:text="About Covid-19"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/prevent"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="220dp"
        android:background="#21896C"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="-5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="290dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/prevention" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="155dp"
            android:layout_height="64dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="-90dp"
            android:layout_marginRight="150dp"
            android:layout_weight="1"
            android:text="How to Prevent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:typeface="serif" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/sick"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="330dp"
            android:orientation="vertical"
            android:background="#21896C">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:layout_marginLeft="-5dp"
                android:layout_marginTop="-5dp"
                android:layout_marginRight="290dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/sick" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="155dp"
                android:layout_height="64dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-90dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:text="If You Get Sick"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/testing"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="440dp"
            android:orientation="vertical"
            android:background="#21896C">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="290dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/covidtesting" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="155dp"
                android:layout_height="64dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-90dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:text="Testing Centers"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/travel"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="550dp"
            android:orientation="vertical"
            android:background="#21896C">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:layout_marginLeft="-30dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="320dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/travelsafe" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="200dp"
                android:layout_height="64dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-60dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:text="Travel Safe Countries"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="660dp"
            android:orientation="vertical"
            android:background="#21896C">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="123dp"
                android:layout_height="100dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="-15dp"
                android:layout_marginRight="320dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/covidsupport" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="200dp"
                android:layout_height="64dp"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="-60dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:text="Where To Find Help"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="80dp"
        android:text="Covid-19 Resources"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif" />
</RelativeLayout>
</ScrollView>


<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">



        <LinearLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="140dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.265">

             <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="290dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/about" />

             <TextView
                android:id="@+id/textView"
                android:layout_width="155dp"
                android:layout_height="64dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="-115dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:text="About Covid-19"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prevent"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="245dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="290dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/prevention" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="155dp"
                android:layout_height="64dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="-115dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:text="How to Prevent"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sick"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="350dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="290dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/sick" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="155dp"
                android:layout_height="64dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="-115dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:text="If You Get Sick"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/testing"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="455dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="290dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/covidtesting" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="155dp"
                android:layout_height="64dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="-115dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:text="Testing Centers"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/travel"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="560dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="320dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/travel" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="155dp"
                android:layout_height="64dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="-85dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:text="Travel Safe Countries"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/help"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="660dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="1dp"
                android:layout_marginRight="320dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/help" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="155dp"
                android:layout_height="64dp"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="-75dp"
                android:layout_marginRight="150dp"
                android:layout_weight="1"
                android:text="Where To Find Help"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />
        </LinearLayout>
</RelativeLayout>
</ScrollView>

